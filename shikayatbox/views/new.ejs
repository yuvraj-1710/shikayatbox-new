<%- include("partials/header") %>
<style>
    .a{
       width: 480px;
       margin: 60px auto; 
       box-shadow: 0 0 20px #000;
    }
    .info{
        width: 100%;
        padding: 10px;
        font-size: 20px;
        font-weight: bold;
        color: white;
        background-color:deepskyblue;
        text-align: center;
    }
    .fbx{
        padding: 20px;
    }
    .inp{
        width: 100%;
        padding: 15px;
        border: 1px solid gray;
        margin-bottom: 8px;
        font-weight: bold;
    }
    @media(max-width: 720px){
        .a{
            width: 90%;
        }
    }
    
</style>
<div class="a">
        <div class="info">Write Your Complaint</div>
        <form action="/" method="POST" class="fbx">
        <textarea  name="naari[description]" rows="16" cols="50" placeholder="type here..." class="inp" required></textarea><br>
        <input class="inp" type="tel" name="naari[phone]" placeholder="your phone number" required><br>
    <input class="inp" type="text" name="naari[location]" placeholder="location" required><br>    
            <button class="btn btn-success btn-lg">SUBMIT</button>
        </form>
    
</div>
<%- include("partials/footer") %>